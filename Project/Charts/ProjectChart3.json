        },
        "y": {
          "field": "Score",
          "type": "quantitative",
          "scale": {"domain": [1,10]}
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "Slategrey"
      },
      "transform": [
        {
          "regression": "GDP per Capita",
          "on": "Score"
        }
      ],
      "encoding": {
        "x": {
          "field": "GDP per Capita",
          "type": "quantitative"
        },
        "y": {
          "field": "Score",
          "type": "quantitative",
          "title": "Happiness Score"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "GDP per Capita",
          "on": "Score",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
